<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yterletskyi.alias">

    <application
        android:name=".AliasApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".startScreen.view.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".settingsScreen.view.SettingsActivity"/>
        <activity android:name=".roundScreen.view.RoundActivity"/>
        <activity android:name=".setupTeamsScreen.view.SetupTeamsActivity"/>
        <activity android:name=".endRoundScreen.view.EndRoundActivity"/>
        <activity android:name=".gameFinishScreen.view.GameFinishActivity">
        </activity>
    </application>

</manifest>