<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="oval">
                    <solid android:color="@color/correct_answer_btn"/>
                    <size
                        android:width="@dimen/btn_answer_diameter"
                        android:height="@dimen/btn_answer_diameter"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/correct_answer_btn_pressed"/>
                    <size
                        android:width="@dimen/btn_answer_diameter"
                        android:height="@dimen/btn_answer_diameter"/>
                </shape>
            </item>
        </selector>
    </item>

    <item android:drawable="@drawable/ic_check_black_24dp"/>

</layer-list>